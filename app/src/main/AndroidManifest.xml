<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gracetee.meetapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".Meeterholic"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activity.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen"
            android:windowSoftInputMode="stateHidden" >

        </activity>
        <activity
            android:name=".Activity.RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".Activity.ChatActivity"
            android:label="@string/title_activity_chat" >
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" >
        </activity>
        <activity
            android:name=".Activity.DiscoverEventsActivity"
            android:label="@string/title_activity_discover_events" >
        </activity>
        <activity
            android:name=".Activity.MyEventsActivity"
            android:label="@string/title_activity_my_events" >
        </activity>
        <activity
            android:name=".Activity.ConversationActivity"
            android:label="@string/title_activity_conversation" >
        </activity>
        <activity
            android:name=".Activity.NotificationActivity"
            android:label="@string/title_activity_notification" >
        </activity>
    </application>

</manifest>
